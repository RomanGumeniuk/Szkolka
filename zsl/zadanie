struct Date {
	unsigned short int dd, m, rrrr;
};

struct User{
	
	string login,haslo,status,accountType;
	unsigned int id;
	Date dateJoin;	
};

int main(int argc, char** argv){
	setlocale(LC_CTYPE,"polish");
	
	User user {"admin","1234","online","Premium",42,{19,5,2021}};
	cout <<"Login : "<<user.login<<" \nHasÅ‚o : "<<user.haslo<<" \nStatus : "
	<<user.status<<"\nAccount Type : "<<user.accountType<<
	" \nID : "<<user.id
	<<" \nJoin Date "<<user.dateJoin.dd<<"-"
	<<user.dateJoin.m<<"-"
	<<user.dateJoin.rrrr<< endl;
	return 0;
}
